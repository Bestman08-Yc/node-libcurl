{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "typeRoots": [
      "./typings"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "watch": true,
    "esModuleInterop": true
  },
  "lib": [
    "es2019",
    "es2017",
    "es7",
    "es6",
    "dom"
  ],
  "include": [
    "src/*"
  ],
  "exclude": [
    
  ]
}